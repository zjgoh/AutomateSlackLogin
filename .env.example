# Copy this file to .env and fill in your values:
#   copy .env.example .env

# Slack sign-in (required)
SLACK_EMAIL=your.email@company.com
SLACK_PASSWORD=your_password

# 2FA: TOTP secret key (base32). From Slack: Security → Two-Factor Authentication → Set up authenticator → "Enter key manually". Paste the key here.
SLACK_TOTP_SECRET=

# Optional: workspace-specific sign-in URL. Leave empty for default.
SLACK_SIGNIN_URL=https://{your-workspace-name}.slack.com/sign_in_with_password

# DO NOT CHANGE THIS VALUE
HEADLESS=false

# Optional: seconds to wait for manual 2FA if TOTP is not set or fails.
TWOFA_WAIT_SECONDS=120

# Optional: number of attempts to open Slack via keyboard shortcut (default 3).
SLACK_TRY_COUNT=3
